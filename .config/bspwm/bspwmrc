#! /bin/sh

xrandr --output eDP-1 --off --output DP-2 --auto --primary --output DP-3 --auto --right-of DP-2
# xrandr --output eDP-1 --auto --primary --output DP-2 --auto --right-of eDP-1

# Startup scripts {{{
setxkbmap -layout us,fr -option ''
sxhkd &
numlockx on &
autocutsel -selection PRIMARY -fork &
greenclip daemon &
compton &
xautolock -time 30 -locker 'i3lock' -corners 0000 &
copyq &
/home/cyril/.local/bin/synconfig
sleep 1

feh --randomize --bg-fill ~/Pictures/Wallpapers/*
conky &
stalonetray &
polybar main &
# }}}

# Monitor configuration {{{

bspc config remove_unplugged_monitors true
bspc config remove_disabled_monitors true

# Tree screens, disabled lid.
bspc monitor DP-2 -n left -d I II III IV V
bspc monitor DP-3 -n right -d VI VII VIII IX X

# Single screen
# bspc monitor DP-2 -n right -d I II III IV V
# bspc monitor eDP-1 -n left -d VI VII VIII IX X

# Two screens
# bspc monitor eDP-1 -n left -d I II III IV V
# bspc monitor DP-3 -n right -d VI VII VIII IX X
# }}}

# Global configuration {{{
bspc config initial_polarity      second_child
bspc config border_width          0
bspc config border_radius         8
bspc config window_gap            18
bspc config split_ratio           0.52
bspc config borderless_monocle    true
bspc config gapless_monocle       false
bspc config focus_follows_pointer true
bspc config focused_border_color '#e1b2d4'
bspc config normal_border_color '#1A1826'
bspc config top_padding 0
bspc config left_padding 0
bspc config right_padding 0
bspc config bottom_padding 0
bspc config -m left top_padding 45
# }}}

# Internal rules {{{
bspc rule -a google-chrome-stable desktop='^I'
bspc rule -a thunderbird desktop='^VIII'
bspc rule -a discord desktop='^IX'
bspc rule -a git-cola state=floating
bspc rule -a zazu state=floating
bspc rule -a gnome-calculator state=floating
bspc rule -a copyq state=floating
# }}}

# vim: syn=sh
