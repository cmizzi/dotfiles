#! /bin/sh

# Startup scripts {{{
xrandr --output DVI-I-1-1 --primary --scale 1.001x1.001 --mode 1920x1080 --output DVI-I-2-2 --mode 1920x1080 --right-of DVI-I-1-1
setxkbmap -layout us,fr -option ''
sxhkd &
numlockx on &
autocutsel -selection PRIMARY -fork &
greenclip daemon &
compton &
xautolock -time 30 -locker 'lock' -corners 0000 &
copyq &
/home/cyril/.local/bin/synconfig
sleep 1

feh --randomize --bg-fill ~/Pictures/Wallpapers/*
conky &
stalonetray &
polybar main &
# }}}

# Monitor configuration {{{
bspc monitor DVI-I-1-1 -n left -d I II III IV
bspc monitor DVI-I-2-2 -n right -d V VI VII VIII IX X
# }}}

# Global configuration {{{
bspc config initial_polarity      second_child
bspc config border_width          0
bspc config border_radius         8
bspc config window_gap            18
bspc config split_ratio           0.52
bspc config borderless_monocle    true
bspc config gapless_monocle       false
bspc config focus_follows_pointer true
bspc config focused_border_color  "#1d1f21"
bspc config normal_border_color   "#a8b0b8"
bspc config presel_feedback_color "#f0bb48"
bspc config top_padding 0
bspc config left_padding 0
bspc config right_padding 0
bspc config bottom_padding 0
bspc config -m right top_padding 0
# }}}

# Internal rules {{{
bspc rule -a google-chrome-stable desktop='^I'
bspc rule -a thunderbird desktop='^VIII'
bspc rule -a discord desktop='^IX'
bspc rule -a git-cola state=floating
bspc rule -a zazu state=floating
bspc rule -a gnome-calculator state=floating
bspc rule -a copyq state=floating
# }}}

# vim: syn=sh
